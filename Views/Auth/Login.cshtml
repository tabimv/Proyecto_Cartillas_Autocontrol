
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <title>Sistema de Cartilla Autocontrol</title>

    <!-- Agregar hojas de estilo de Bootstrap y fuentes externas -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- Agregar scripts de jQuery y Bootstrap -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <!-- Enlace al archivo CSS externo -->
    <link rel="stylesheet" href="~/Content/css/login.css">
</head>
<body>
    <!-- Contenido principal -->
    <div class="container mt-5">
        <img class="img-fluid logo" src="~/Content/img/logo.png" alt="Logotipo">
        <h1 class="text custom-title">
            Accede para<br>Supervisar y<br>Transformar la<br>Excelencia en<br>Cada Etapa<br> de la Obra
        </h1>
        <hr class="custom-hr">
        <p class="text custom-subtitle">
            Empoderando la Calidad en Cada Paso:<br>"Explora el Futuro del Autocontrol<br>Constructivo con Nosotros"
        </p>
    </div>

    <!-- Contenedor de inicio de sesión -->
    <div class="container login-container mt-5">
        <h2 class="login-title">Inicio Sesión</h2>
        <form action="/Auth/Login" method="post">
            @Html.AntiForgeryToken()
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input id="email" type="email" class="form-control" name="correo" placeholder="Correo">
            </div>
            <br>

            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                <input id="password" type="password" class="form-control" name="contraseña" placeholder="Contraseña">
            </div>
            <br>
            <div class="mb-3">
                <a href="#" class="forgot-password">¿Olvidaste tu contraseña?</a>
            </div>

            @Html.Partial("_PartialMessage")
            <button type="submit" class="btn btn-lg">Iniciar Sesión</button>

        </form>
    </div>

    <!-- Pie de página -->
    <footer id="Footer" class="clearfix mt-5">
        <div class="container">
            <div class="row">
                <!-- Columna 1 - Logo y Redes Sociales -->
                <div class="col-md-4">
                    <img class="footer_logo img-fluid" src="https://www.cmanzano.cl/wp-content/uploads/2022/02/footer-02.png" alt="Footer Logo">
                    <div class="social-icons mt-4">
                        <a href="https://www.facebook.com/empresaspaumar"><img src="https://www.cmanzano.cl/wp-content/uploads/2022/02/fb-icon.png" alt="Facebook"></a>
                        <a href="https://instagram.com/empresaspaumar"><img src="https://www.cmanzano.cl/wp-content/uploads/2022/02/instagram-icon.png" alt="Instagram"></a>
                    </div>
                </div>
                <!-- Columna 2 - Datos de Constructora Manzano y Asociados Ltda. -->
                <div class="col-md-4">
                    <div class="widget">
                        <strong>Constructora Manzano y Asociados Ltda.</strong>
                        <br> <br>
                        <p><i class="fa fa-map-marker" style="color:#f36f21;"></i> Av. Las Margaritas 1925, San Pedro de la Paz.</p>
                        <p><i class="fa fa-phone" style="color:#f36f21;"></i> 41 244 4000</p>
                        <p><i class="fa fa-envelope" style="color:#f36f21;"></i> contacto@cmanzano.cl</p>
                    </div>
                </div>
                <!-- Columna 3 - Datos de Inmobiliaria Paumar -->
                <div class="col-md-4">
                    <div class="widget">
                        <strong>Inmobiliaria Paumar</strong>
                        <br> <br>
                        <p><i class="fa fa-map-marker" style="color:#f36f21;"></i> Av. Las Margaritas 1925, San Pedro de la Paz.</p>
                        <p><i class="fa fa-phone" style="color:#f36f21;"></i> +56 9 6208 7187</p>
                        <p><i class="fa fa-globe" style="color:#f36f21;"></i> www.paumar.cl</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
