@model Proyecto_Cartilla_Autocontrol.Models.ViewModels.CartillaViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>CARTILLA</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Observaciones, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ObraId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ObraId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ObraId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ActividadId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ActividadId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ActividadId, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.EstadoFinalId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.EstadoFinalId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EstadoFinalId, "", new { @class = "text-danger" })
        </div>
    </div>


    <!-- Agrega campos adicionales para la creación de la CARTILLA -->

    <h4>DETALLES DE CARTILLA</h4>

    @if (Model.Detalles != null && Model.Detalles.Any())
    {
        for (int i = 0; i < Model.Detalles.Count; i++)
        {
            <div class="detalle-cartilla">
                @Html.HiddenFor(model => model.Detalles[i].DetalleCartillaId)
                @Html.EditorFor(model => model.Detalles[i].EstadoIto)
                @Html.EditorFor(model => model.Detalles[i].EstadoOtec)
                @Html.EditorFor(model => model.Detalles[i].ItemVerifId)
                @Html.EditorFor(model => model.Detalles[i].InmuebleId)

                <!-- Agrega más campos según sea necesario -->
                <!-- Mensajes de validación -->
                @Html.ValidationMessageFor(model => model.Detalles[i].DetalleCartillaId)
                @Html.ValidationMessageFor(model => model.Detalles[i].EstadoIto)
                @Html.ValidationMessageFor(model => model.Detalles[i].EstadoOtec)
                @Html.ValidationMessageFor(model => model.Detalles[i].ItemVerifId)
                @Html.ValidationMessageFor(model => model.Detalles[i].InmuebleId)

                <hr />
            </div>
        }
    }





    <!-- Agrega campos para la creación de DETALLE_CARTILLA, puedes usar un bucle para los detalles -->

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

}