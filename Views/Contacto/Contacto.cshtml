
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacto de Ayuda</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #B0B0B0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .contacto-container {
            background-color: #FFF;
            padding: 50px;
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2);
            width: 500px;
            height: 200px;
            transition: box-shadow 0.3s ease;
        }

            .contacto-container:hover {
                box-shadow: 0px 0px 30px rgba(0, 0, 0, 0.4);
            }

        h2 {
            color: #EF6B48;
            margin-bottom: 15px;
            text-align: center;
            margin-bottom: 30px;
        }

        p {
            color: #585858;
            margin-bottom: 10px;
            text-align: center;
        }

        a {
            color: #E96F21;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            a:hover {
                color: #585858;
            }
    </style>
</head>
<body>

    <div class="contacto-container">
        <h2>Contacto de Ayuda</h2>
        <p>Para cualquier consulta o ayuda, por favor contáctenos al siguiente correo electrónico:</p>
        <p><a href="mailto:cartillas.obra.manzano@gmail.com">informatica@paumar.cl</a></p>
        <a href="@Url.Action("Login", "Account")" class="VerCartilla">
            <i style="color: black; margin-left:45%; margin-top:20px; font-size: 30px;" class="material-icons" data-toggle="tooltip" title="Iniciar Sesión">&#xE879;</i>
            <span style="display: none;">VerCartilla</span>
        </a>
    </div>

</body>
</html>

